#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Installing New Relic Agent"
echo "Installing package" | indent
curl -Ls https://download.newrelic.com/install/newrelic-cli/scripts/install.sh | bash
echo "Installing php-agent" | indent
 && sudo NEW_RELIC_API_KEY=$NEW_RELIC_API_KEY NEW_RELIC_ACCOUNT_ID=$NEW_RELIC_ACCOUNT_ID /usr/local/bin/newrelic install -n php-agent-installer
echo "-----> Finished installing New Relic Agent"

exit 0
